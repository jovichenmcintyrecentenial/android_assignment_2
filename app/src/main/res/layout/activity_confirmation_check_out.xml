<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/page_margin2"
            android:orientation="vertical"
            tools:context=".ConfirmationCheckOutActivity">

            <TextView
                style="@style/main_instructions"
                android:text="Order successful" />

            <TextView
                style="@style/sub_instructions"
                android:layout_marginBottom="@dimen/bottom_margin_instruction"
                android:text="Here is a summary of your order and delivery details" />

            <ImageView
                android:id="@+id/phone_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="@dimen/page_margin2"
                app:srcCompat="@drawable/google_pixel_5" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/page_margin2"
                android:background="@drawable/border"
                android:padding="@dimen/page_margin2">

                <TableRow>

                    <TextView
                        style="@style/checkout_text_view_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Order Summary"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        style="@style/data_label"
                        android:text="Company" />

                    <TextView
                        android:id="@+id/company"
                        style="@style/information"
                        tools:text="Apple" />
                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        style="@style/data_label"
                        android:text="Model" />

                    <TextView
                        android:id="@+id/model"

                        style="@style/information"
                        android:text="IPhone 14 Pro Max" />
                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        style="@style/data_label"
                        android:text="Color" />

                    <TextView
                        android:id="@+id/phone_color"

                        style="@style/information"
                        android:text="Blue" />
                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        style="@style/data_label"
                        android:text="Internal Storage" />

                    <TextView
                        android:id="@+id/internal_storage"
                        style="@style/information"

                        android:text="64 GB" />
                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        style="@style/data_label"
                        android:text="Card Type" />

                    <TextView
                        android:id="@+id/card_type"
                        style="@style/information"

                        android:text="Debit" />
                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        style="@style/data_label"

                        android:text="Card Last 4 Digits" />

                    <TextView
                        android:id="@+id/last_4_digits"

                        style="@style/information"
                        android:text="2324" />
                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        style="@style/data_label"
                        android:text="Price" />

                    <TextView
                        android:id="@+id/price"

                        style="@style/information"
                        android:text="$1,250.00" />
                </TableRow>

            </TableLayout>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:padding="@dimen/page_margin2">

                <TableRow>

                    <TextView
                        style="@style/checkout_text_view_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Delivery Address"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        style="@style/data_label"
                        android:text="Name" />

                    <TextView
                        android:id="@+id/user_name"

                        style="@style/information"
                        android:text="Jovi Chen-Mcintyre" />
                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        style="@style/data_label"
                        android:text="Address" />

                    <TextView
                        android:id="@+id/address"

                        style="@style/information"
                        android:text="20 Glenheather Terrace" />
                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        style="@style/data_label"
                        android:text="City" />

                    <TextView
                        android:id="@+id/city"
                        style="@style/information"

                        android:text="Markham" />
                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        style="@style/data_label"
                        android:text="Postal Code" />

                    <TextView
                        android:id="@+id/postal_code"
                        style="@style/information"
                        android:text="525 SF4" />
                </TableRow>


            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>